<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- PANEL SUPERIOR: INSTRUCCIONES -->
    <TextView
        android:id="@+id/txtInstrucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa en las cartas"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TableLayout
        android:id="@+id/tableCartas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/txtInstrucciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FILA 0 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imb00"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0" />

            <ImageButton
                android:id="@+id/imb01"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1" />

            <ImageButton
                android:id="@+id/imb02"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="2" />
        </TableRow>

        <!-- FILA 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imb10"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0" />

            <ImageButton
                android:id="@+id/imb11"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1" />

            <ImageButton
                android:id="@+id/imb12"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="2" />
        </TableRow>

        <!-- FILA 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imb20"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0" />

            <ImageButton
                android:id="@+id/imb21"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1" />

            <ImageButton
                android:id="@+id/imb22"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="2" />
        </TableRow>

        <!-- FILA 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imb30"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0" />

            <ImageButton
                android:id="@+id/imb31"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1" />

            <ImageButton
                android:id="@+id/imb32"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="2" />
        </TableRow>

        <!-- FILA DE TÃTULOS -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/lbRecord"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Record"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbIntentos"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Intentos"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbAciertos"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Aciertos"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- FILA DE VALORES -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtRecord"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="0"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtIntentos"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtAciertos"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0"
                android:textAlignment="center"
                android:textSize="25sp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
